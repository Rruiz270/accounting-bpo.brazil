{
  "name": "accounting-bpo-brazil",
  "version": "1.0.0",
  "description": "Sistema BPO Financeiro completo para o mercado brasileiro",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "turbo run type-check",
    "prisma:generate": "cd apps/api && npx prisma generate",
    "prisma:migrate": "cd apps/api && npx prisma migrate dev",
    "prisma:deploy": "cd apps/api && npx prisma migrate deploy",
    "prisma:seed": "cd apps/api && npx tsx prisma/seed.ts",
    "vercel-build": "npm run prisma:generate && npm run build",
    "railway-build": "cd apps/api && npm run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lucide-react": "^0.546.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.0.4",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^3.3.6"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rruiz270/accounting-bpo.brazil.git"
  },
  "author": {
    "name": "Raphael Ruiz",
    "url": "https://github.com/Rruiz270"
  },
  "keywords": [
    "bpo",
    "financeiro",
    "contabilidade",
    "brasil",
    "nextjs",
    "nestjs",
    "typescript",
    "postgresql",
    "prisma"
  ]
}
